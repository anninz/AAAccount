<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/child_view_margin_short"
        android:id="@+id/layout1">
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="支出    "
            android:id="@+id/pbb_switch_expend"
            android:layout_weight="1"
            android:textSize="16sp"
            android:background="@drawable/button_text_backgrand_left_selected"/>
        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:id="@+id/pbb_switch_income"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="    收入"
            android:textSize="16sp"
            android:background="@drawable/button_text_backgrand_right"/>

    </LinearLayout>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/consume_pie_chart"
        android:layout_width="match_parent"
        android:layout_below="@id/layout1"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_height="320dip" />

</RelativeLayout>

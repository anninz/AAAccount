<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <include
        android:id="@+id/appbar"
        layout="@layout/include_toolbar" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/child_view_margin_short"
        android:layout_height="wrap_content">

        <TextView
            android:text="现金"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/child_view_margin_short"
            android:paddingRight="@dimen/child_view_margin_short"
            android:layout_gravity="bottom"
            android:id="@+id/tv_wallet_type"
            android:textColor="@color/white"
            android:onClick="showWalletAlertDialog"
            android:background="@drawable/input_text_backgrand"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputPatNum4"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/child_view_margin"
            android:layout_marginRight="@dimen/child_view_margin"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/item_cost"
                android:inputType="numberDecimal"
                />

        </android.support.design.widget.TextInputLayout>


        <ImageButton
            android:text="Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/expand_switch"
            android:src="@drawable/expand_switch"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom"
            android:onClick="switchItemType"
            android:background="@android:color/transparent"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/add_personal_divider"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/child_view_margin_short"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/create_date"
            android:layout_weight="1"
            android:textSize="15dp"
            android:onClick="showDatePicker"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_personal_divider_v"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:gravity="right"
            android:ems="10"
            android:id="@+id/create_time"
            android:textSize="15dp"
            android:layout_weight="1"
            android:onClick="showTimePicker"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/add_personal_divider"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_margin="@dimen/child_view_margin_short"
        android:scrollbars="none"
        android:background="@color/list_item"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/add_personal_divider"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputPatNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/child_view_margin_short"
        android:layout_marginRight="@dimen/child_view_margin"
        >

        <EditText
            android:id="@+id/item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Summary"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_view_margin"
        android:layout_marginLeft="@dimen/child_view_margin_short"
        android:layout_marginRight="@dimen/child_view_margin_short"
        android:onClick="commit"
        android:background="@color/primary"
        android:id="@+id/button5"
         />

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_marginLeft="@dimen/child_view_margin_short"
    android:layout_marginRight="@dimen/child_view_margin_short"
    android:layout_marginTop="@dimen/child_view_margin_4dp"
    android:layout_marginBottom="@dimen/child_view_margin_4dp"
    android:clickable="true"
    android:background="@drawable/news_item"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/primary_dark"
        android:id="@+id/view_item_name"
        android:layout_weight="0.07" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_members"
        android:layout_weight="0.07" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_payer"
        android:layout_weight="0.07" />

    <TextView
        android:text="备注："
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_summary"
        android:maxLines="1"
        android:layout_weight="0.07" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07" >

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_total"
            android:layout_weight="1"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_average"
            android:layout_weight="1"
            />

        <Button
            android:text="—"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/button7"
            android:background="@color/list_item"
            android:layout_weight="0.1" />

        <Button
            android:text=">"
            android:layout_width="28dp"
            android:layout_height="20dp"
            android:layout_marginLeft="1dp"
            android:textColor="@color/primary_dark"
            android:id="@+id/button8"
            android:background="@color/list_item"
            android:layout_weight="0.1" />
    </LinearLayout>
</LinearLayout>
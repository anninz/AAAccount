<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">


    <include
        android:id="@+id/appbar"
        layout="@layout/include_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/child_view_margin_top"
        android:layout_marginLeft="@dimen/child_view_margin_short"
        android:layout_marginRight="@dimen/child_view_margin_short"
        android:layout_marginBottom="@dimen/child_view_margin_short"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_basic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="basic"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/iv_main_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/heng_3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="个人账本"
                android:textColor="#ffffff"
                android:textSize="28sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_high"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="high"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/iv_main_high"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/heng_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="活动账本"
                android:textColor="#ffffff"
                android:textSize="28sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_main_use"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:transitionName="use"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/iv_main_use"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@mipmap/heng_4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="关于我们"
                android:textColor="#ffffff"
                android:textSize="28sp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/image"
        android:scaleType="centerCrop"/>


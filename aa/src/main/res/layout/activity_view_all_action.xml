    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/child_view_margin_top"
        android:layout_marginLeft="@dimen/child_view_margin_short"
        android:layout_marginRight="@dimen/child_view_margin_short"
        android:scrollbars="none"
        android:background="@color/list_item"
        />

    <TextView
        android:text="@string/null_item_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/child_view_margin_short"
        android:layout_marginRight="@dimen/child_view_margin_short"
        android:layout_centerVertical="true"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/action_hint" />


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_labels_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_labels_position="left">

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:onClick="restoreActivityEvent"
            fab:fab_size="mini"
            fab:fab_label="导入活动" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:onClick="backupActivityEvent"
            fab:fab_size="mini"
            fab:fab_label="备份活动" />

        <com.github.clans.fab.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:onClick="createAction"
            fab:fab_size="mini"
            fab:fab_label="创建活动" />

    </com.github.clans.fab.FloatingActionMenu>



</RelativeLayout>